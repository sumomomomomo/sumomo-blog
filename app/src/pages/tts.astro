import '../styles/tts.css';
import TTS from '../components/TTS';

interface Props {
  title?: string;
}

const { title = "TTS - Text to Speech" } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body>
        <nav>
            <a href="/">Home</a>
            <a href="/about/">About</a>
            <a href="/blog/">Blog</a>
            <a href="/tts/" class="active">TTS</a>
        </nav>

        <TTS client:load />
	</body>
</html>
